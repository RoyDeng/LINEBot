@model LINEBot.Models.Bot

@{
    ViewBag.Title = "新增機器人";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>新增機器人</h5>
            </div>
            <div class="ibox-content">
                @using (Html.BeginForm("Create", "Bots", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="MemberId" value="@Session["MemberId"]">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="ChannelToken">Channel Token</label>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.ChannelToken, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="ChannelSecret">Channel Secret</label>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.ChannelSecret)
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-primary" type="submit">確定</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>