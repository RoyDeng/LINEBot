@model IEnumerable<LINEBot.Models.Bot>

@{
    ViewBag.Title = "機器人";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>機器人</h5>
                <div class="ibox-tools">
                    <a class="btn btn-success" href="@Url.Action("Create", "Bots")">
                        <i class="fa fa-plus"></i> 新增機器人
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables">
                        <thead>
                            <tr>
                                <th>Channel Token</th>
                                <th>Webhook</th>
                                <th>Channel Secret</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                                <tr>
                                    <td>@(item.ChannelToken.Length > 32 ? item.ChannelToken.Substring(0, 32) + "..." : item.ChannelToken)</td>
                                    <td>https://linebotbeta.azurewebsites.net/webhook</td>
                                    <td>@Html.DisplayFor(modelItem => item.ChannelSecret)</td>
                                    <td>
                                        <a class="btn btn-primary" href="@Url.Action("Edit", "Bots", new { id = item.BotId })">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a class="btn btn-info" href="@Url.Action("Details", "Bots", new { id = item.BotId })">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a class="btn btn-danger" href="@Url.Action("Delete", "Bots", new { id = item.BotId })">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Channel Token</th>
                                <th>Webhook</th>
                                <th>Channel Secret</th>
                                <th>操作</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>